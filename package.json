{
  "name": "kruger",
  "version": "1.0.1",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@sap-cloud-sdk/connectivity": "^3.9.0",
    "@sap-cloud-sdk/http-client": "^3.9.0",
    "@sap-cloud-sdk/resilience": "^3.9.0",
    "@sap-cloud-sdk/util": "^3.9.0",
    "@sap/cds": "^7.9.4",
    "@sap/cds-hana": "^2",
    "@sap/cds-mtxs": "^1.9",
    "@sap/eslint-plugin-cds": "^2.6.4",
    "@sap/ux-cds-odata-language-server-extension": "^1.12.0",
    "@sap/xssec": "^3",
    "axios": "^1.6.4",
    "cds": "^0.2.0",
    "dotenv": "^16.3.1",
    "express": "^4",
    "mbt": "^1.2.30",
    "passport": "^0",
    "querystring": "^0.2.1"
  },
  "devDependencies": {
    "@cap-js/sqlite": "^1.4.0",
    "@sap/cds-dk": "^7",
    "@sap/ux-specification": "^1.120.16",
    "cds-plugin-ui5": "^0.6.13",
    "rimraf": "^3.0.2"
  },
  "scripts": {
    "start": "cds-serve",
    "cds": "npm i @sap/cds",
    "undeploy": "cf undeploy kruger --delete-services --delete-service-keys --delete-service-brokers",
    "build": "rimraf resources mta_archives && mbt build --mtar archive",
    "deploy": "cf deploy mta_archives/archive.mtar --retries 1",
    "clean": "rimraf \"**/*mta_archives\" \"**/*gen\" \"**/*resources\" \"**/*dist\" \"**/*node_modules\"",
    "watch-kruger": "cds watch --open kruger/webapp/index.html?sap-ui-xx-viewCache=false"
  },
  "cds": {
    "requires": {
      "[development]": {
        "kind": "sqlite",
        "auth": "dummy",
        "impl": "@cap-js/sqlite",
        "credentials": {
          "url": "memory"
        }
      },
      "[production]": {
        "db": "hana",
        "auth": "xsuaa"
      },
      "[hybrid]": {
        "db": "hana",
        "auth": "dummy"
      },
      "ZSD_SRA021_SRV": {
        "kind": "odata-v2",
        "csrf": true,
        "csrfInBatch": true,
        "model": "srv/external/ZSD_SRA021_SRV",
        "credentials": {
          "destination": "Kruger_Cloud_API",
          "path": "/sap/opu/odata/sap/ZSD_SRA021_SRV"
        }
      }
    }
  },
  "workspaces": [
    "app/*"
  ],
  "sapux": [
    "app/kruger"
  ]
}
